<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <useStyles filename="Interface/style/nifty-bad-style.xml"/>
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="bad.vector.menu.BadScreenController">
        <layer id="layer" backgroundColor="#003f" childLayout="horizontal">
            <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">  
                <control name="button" label="Server" id="StartServerButton" align="center" valign="center" 
                         visibleToMouse="true" > 
                    <interact onClick="startServer()"/>
                </control>
            </panel>
 
            <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">  
                <control name="button" label="Client" id="StartClientButton" align="center" valign="center" 
                         visibleToMouse="true" > 
                    <interact onClick="startClient()"/>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
